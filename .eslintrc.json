{
  "extends": ["airbnb-base"],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "eol-last": "off",
    "no-plusplus": "off",
    "import/prefer-default-export": "off",
    "no-trailing-spaces": "off",
    "import/extensions": "off",
    "no-undef": "off"
  },
  "globals": {
    "window": true,
    "describe": true,
    "it": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
